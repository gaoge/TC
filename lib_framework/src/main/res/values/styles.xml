<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity 之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/anim_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_bottom_out</item>
    </style>

    <style name="dialog_scale_anim">
        <item name="android:windowEnterAnimation">@anim/anim_scale</item>
    </style>
</resources>